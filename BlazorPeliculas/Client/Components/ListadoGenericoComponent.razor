@typeparam Titem

@if (Listado == null)
{
    @if (Cargando == null)
    {
        <text>Cargando ...</text>
    }
    else
    {
        @Cargando
    }
}
else if (Listado.Count == 0)
{
    @if (SinRegistro == null)
    {
        <text>No hay registros para mostrar</text>
    }
    else
    {
        @SinRegistro
    }

}
else
{
    foreach(var elem in Listado)
    {
        @HayRegistros(elem);
    }
}

@code {
    [Parameter]
    public RenderFragment Cargando { get; set; }
    [Parameter]
    public RenderFragment SinRegistro { get; set; }
    [Parameter]
    public List<Titem> Listado { get; set; }
    [Parameter]
    public RenderFragment<Titem> HayRegistros { get; set; }
}
