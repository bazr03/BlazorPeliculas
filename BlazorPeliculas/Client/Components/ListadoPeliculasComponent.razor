
<ListadoGenericoComponent Listado="Peliculas">
    <HayRegistros Context="pelicula">
        <PeliculaComponent Pelicula="pelicula" EliminarPelicula="EliminarPelicula" />
    </HayRegistros>
</ListadoGenericoComponent>



@code {
    [Parameter]
    public List<Pelicula> Peliculas { get; set; }


    private void EliminarPelicula(Pelicula pelicula)
    {
        Peliculas.Remove(pelicula);
        Console.WriteLine($"Se ha eliminado la pelicula ${pelicula.Titulo}");
    }

}
